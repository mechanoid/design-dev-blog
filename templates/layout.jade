doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/styles/solarized_light.min.css')
      link(rel='stylesheet', href='/style/app.css')
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)= locals.name

            p.blog-creator-reference
              | #{ "by " }
              mixin author("falk").name

            p.intro= locals.description
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!

    footer.main-footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html

          section.copy
            p
              a(href='https://www.innoq.com/de/impressum/')
                | Impressum

            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design

    script(src="http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/highlight.min.js")
    script(type="text/javascript").
      hljs.initHighlightingOnLoad();
